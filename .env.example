FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=8080
UPLOAD_FOLDER=./uploads
ALLOWED_EXTENSIONS=mp3

API_KEY_ENABLED=false
API_KEY=your-secure-api-key-here
UI_ENABLED=true

CONFIDENCE_THRESHOLD=80

# Audio Preprocessing Configuration

# Enable/disable preprocessing entirely
AUDIO_ENABLE_PREPROCESSING=true

# Enable/disable specific preprocessing steps
AUDIO_ENABLE_DC_OFFSET=true
AUDIO_ENABLE_NORMALIZATION=true
AUDIO_ENABLE_PRE_EMPHASIS=true
AUDIO_ENABLE_NOISE_REDUCTION=true
AUDIO_ENABLE_COMPRESSION=true
AUDIO_ENABLE_TRIM_SILENCE=true

# Pre-emphasis filter coefficient (0.0 to 1.0)
AUDIO_PRE_EMPHASIS=0.97

# Frame length for STFT (power of 2)
AUDIO_FRAME_LENGTH=2048

# Hop length for STFT (typically frame_length/4)
AUDIO_HOP_LENGTH=512

# Noise reduction threshold
AUDIO_NOISE_THRESHOLD=2.0

# Silence trimming threshold in dB
AUDIO_TRIM_DB=20.0

# Silence detection threshold (RMS amplitude)
AUDIO_SILENCE_THRESHOLD=0.01

# Sample rate for audio processing
AUDIO_SAMPLE_RATE=16000

TRANSCRIPTION_HELPER_PROMPT="You need to transcribe the following text and find keywords: "
TRANSCRIPTION_ADD_KEYWORDS="true"